<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.sort_by{|article| article.rates("link").average(:stars) }.reverse.each do |article| %>
      <tr>
        <td class="rating_column"><%= link_to article.link, article.link, target: "_blank" %>
        <%= imdb_style_rating_for article, current_user %>
          <% if current_user %>
            Rating: <%= rating_for article, "link", disable_after_rate: false, imdb_avg: true %></br>
          <% end %>
        </td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

